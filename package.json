    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@tsconfig/strictest": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "sass": "^1.60.0",
    "solid-js": "^1.7.1",
    "sort-package-json": "^2.4.1",
    "typescript": "^5.0.3",
    "vite": "^4.2.1",
    "vite-plugin-solid": "^2.6.1"
  },
  "dependencies": {
    "base-up": "^0.7.1",
    "colorjs.io": "^0.4.3"
  }
}
