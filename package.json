    "sort-package-json": "^2.4.1",
    "typescript": "^5.0.4",
    "vite": "^4.2.3",
    "vite-plugin-solid": "^2.7.0"
  },
  "dependencies": {
    "base-up": "^0.15.0",
    "colorjs.io": "^0.4.5",
    "solid-design-parts": "^0.6.0"
